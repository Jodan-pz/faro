{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sonar (start)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "sonarscanner",
                "begin",
                "/k:\"FARO\"",
                "/d:sonar.scm.provider=git",
                "/d:sonar.host.url=\"http://localhost:9000\"",
                "/d:sonar.login=\"sqp_54b4c1a89b0064b5b2ef90fee2f1f1fa2f29be4e\""
                // "/d:sonar.login=\"7ff50978a14cacd16d465613acada6a24c76e999\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Sonar",
            "type": "shell",
            "dependsOn": [
                "Sonar (start)",
                "build"
            ],
            "dependsOrder": "sequence",
            "command": "dotnet",
            "args": [
                "sonarscanner",
                "end",
                // "/d:sonar.login=\"7ff50978a14cacd16d465613acada6a24c76e999\"",
                "/d:sonar.login=\"sqp_54b4c1a89b0064b5b2ef90fee2f1f1fa2f29be4e\""
            ],
            "problemMatcher": []
        },
        {
            "label": "build addons",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
            },
            "isBuildCommand": true,
            "args": [
                "build",
                "${workspaceFolder}/FARO.addons",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBuildCommand": true,
            "args": [
                "build",
                "${workspaceFolder}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish: addons",
            "command": "dotnet",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/FARO.addons"
            },
            "args": [
                "publish",
                "--no-restore"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish: nice flow runner",
            "command": "dotnet",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/FARO.niceflowrunner"
            },
            "args": [
                "publish",
                "--no-restore"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish: image persister (mysql)",
            "command": "dotnet",
            "type": "shell",
