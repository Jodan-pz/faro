            },
            "args": [
                "publish",
                "--no-restore"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish: definition datalayer (mongo)",
            "command": "dotnet",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/FARO.datalayer.mongodb"
            },
            "args": [
                "publish",
                "--no-restore"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish all",
            "dependsOn": [
                "publish: addons",
                "publish: definition datalayer (mongo)",
                "publish: image persister (mysql)",
                "publish: nice flow runner"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
